@model List<BugTracker.Domain.Entities.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

@section AddToHead{
    <link href="~/Content/Colorgraph.css" rel="stylesheet" />
    <script src="~/Scripts/misc/ModalDeleteUser.js"></script>
}

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6">
        <h2>Users</h2>
        <hr class="colorgraph" />
        @for (int i = 0; i < Model.Count; i++)
        {
            <span class="pull-left">
                <strong>@Model[i].DisplayName</strong>
                <p>@Model[i].Email</p>
            </span>

            <span class="pull-right">
                <a class="btn btn-sm btn-danger open-deleteUserDialog" data-toggle="modal" href="#deleteUserDialog"
                   data-id="@Model[i].Id" data-name="@Model[i].DisplayName">
                    <i class="glyphicon glyphicon-remove"></i>
                </a>
            </span>

            <br />

            if (i != Model.Count - 1)
            {
                <br /><hr/>
            }
        }
        <br />
        <hr class="colorgraph" />
    </div>
</div>

<div class="modal fade" id="deleteUserDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete user</h4>
            </div>
            <div class="modal-body">
                <p id="question"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" id="userId">Delete</a>
            </div>
        </div>
    </div>
</div>